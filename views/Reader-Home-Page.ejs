<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />

    <title>Reader Home Page</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-3 mt-5 p-3 bg-primary text-white text-center">
        Reader Home Page
      </h1>
      <!--show log in button only when not logged in-->
      <% if (!isLoggedIn){ %>
      <a class="btn btn-success" href="/user/login-Page"> log in as Author</a>
      <% } %> <% if (isLoggedIn){ %>
      <a class="btn btn-success" href="/user/Author-Home-Page"
        >Author Home Page</a
      >
      <% } %>

      <div class="container">
        <div class="container mb-5">
          <%readerBlog.forEach(blogs => {%>
          <h2 class="text-center"><%=blogs.blog_AuthorName%></h2>
          <h3 class="text-center"><%=blogs.blog_Title%></h3>
          <h5 class="text-center"><%=blogs.blog_Subtitle%></h5>
          <% })%>
        </div>
        <h3 class="mt-4">Published Articles</h3>
        <% readerPublish.forEach(publishArticles => {%>
        <div class="card mt-4">
          <div class="card-body">
            <h4 class="card-title"><%=publishArticles.articles_Title%></h4>
            <h6 class="card-subtitle mb-2 text-muted">
              <%=publishArticles.articles_Subtitle%>
            </h6>
            <div class="card-text mb-2">
              <%=publishArticles.articles_Content%>
            </div>
            <footer class="blockquote-footer mt-3">
              <%=publishArticles.articles_AuthorName%>
            </footer>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-hand-thumbs-up-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"
              />
            </svg>
            <p class="d-inline"><%=publishArticles.articles_likes%></p>
            <p class="fst-italic mb-0">
              Created: <%=publishArticles.articles_DateCreated%>
            </p>
            <p class="fst-italic">
              Published: <%=publishArticles.articles_DatePublished%>
            </p>

            <a
              href="/user/Reader-Article-Page/<%=publishArticles.articles_record_id%>"
              class="btn btn-success"
              >Read More</a
            >
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </body>
</html>
